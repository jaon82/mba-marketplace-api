generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  phone    String  @unique
  email    String  @unique
  password String
  avatarId String? @map("avatar_id")

  avatar Attachment? @relation(fields: [avatarId], references: [id])

  @@map("users")
}

model Attachment {
  id  String @id @default(uuid())
  url String

  users User[]

  @@map("attachments")
}

model Category {
  id    String @id
  title String
  slug  String @unique

  @@map("categories")
}
